{
  "name": "vyapaar-ai",
  "version": "1.0.0",
  "description": "AI-powered business management application for Indian small businesses",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "setup": "node setup-backend.js",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run preview",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd frontend && rm -rf node_modules dist",
    "clean:backend": "cd backend && rm -rf node_modules",
    "db:setup": "cd backend && npm run db:setup",
    "db:sample": "cd backend && npm run db:sample"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "fastq": "^1.19.1",
    "run-parallel": "^1.2.0",
    "vite": "^5.4.19"
  },
  "dependencies": {
    "@floating-ui/react-dom": "^2.1.6",
    "@reduxjs/toolkit": "^2.11.2",
    "aria-hidden": "^1.2.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.20.1",
    "react-remove-scroll": "^2.7.2",
    "redux": "^5.0.1",
    "use-sync-external-store": "^1.6.0"
  },
  "keywords": [
    "ai",
    "business",
    "management",
    "voice",
    "whatsapp",
    "inventory",
    "invoices",
    "react",
    "nodejs",
    "firebase"
  ],
  "author": "Vyapaar AI Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
